<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/today_lunch_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/light_gray">


    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/reserve_color_p6"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        app:cardCornerRadius="45dp">


        <ImageView
            android:id="@+id/today_lunch_item_img"
            android:layout_width="wrap_content"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_pizza_steam" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_color1"
            android:alpha="0.7"
            android:elevation="5dp">

            <TextView
                android:id="@+id/today_lunch_item_title"
                style="@style/food_item_style"
                android:textSize="42sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:gravity="center"
                android:maxEms="10"
                android:maxLines="2"
                android:text="@string/pizza_fegato_di_pollo"
                android:textAlignment="center"
                android:textColor="@color/black" />




        </androidx.cardview.widget.CardView>


    </androidx.cardview.widget.CardView>

</RelativeLayout>