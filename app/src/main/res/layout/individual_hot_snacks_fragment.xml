<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color3"
    tools:context=".ui.category_fragments.BreakfastFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/breakfast_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_color3"
        android:orientation="horizontal"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/percent_up"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/menu_food_item">

    </androidx.recyclerview.widget.RecyclerView>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/addons_scroller"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_color3"
        android:orientation="horizontal"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percent_down"
        tools:listitem="@layout/breakfast_addon_item">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/percent_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="45dp"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toTopOf="@+id/addons_scroller"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/breakfast_scroller">

        <TextView
            style="@style/food_item_style"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Добавки к завтракам"
            android:background="@color/light_gray"
            android:textColor="@color/black"
            android:textSize="36sp" />


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/percent_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.62" />
</androidx.constraintlayout.widget.ConstraintLayout>