<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color3"
    tools:context=".ui.ActiveCategoryFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/percent_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.cardview.widget.CardView
        android:id="@+id/complex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/percent_down"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/food_item_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/reserve_color_p2"
            android:text="Комплексы бизнес ланча"
            android:textColor="@color/black"
            android:textSize="48sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/lunch_day_menu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="45dp"
        app:layout_constraintEnd_toStartOf="@+id/percent_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/food_item_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:background="@color/reserve_color_p2"
            android:text="Сегодня в меню"
            android:textColor="@color/black"
            android:textSize="48sp" />

    </androidx.cardview.widget.CardView>


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/complex_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/primary_color3"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/percent_down"
        app:layout_constraintTop_toBottomOf="@+id/complex"
        tools:listitem="@layout/menu_food_item">

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/today_bussiness_lunch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/primary_color3"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/percent_down"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lunch_day_menu"
        tools:listitem="@layout/menu_food_item">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>