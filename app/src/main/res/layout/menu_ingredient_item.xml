<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ingredient_item_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:layout_margin="4dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:padding="5dp"
        app:cardBackgroundColor="@color/light_gray"
        app:cardCornerRadius="60dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/ingredient_text"
                style="@style/food_item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="4dp"
                android:maxEms="10"
                android:maxLines="2"
                android:text="Красная рыба"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/ingredient_img"
                app:layout_constraintStart_toEndOf="@id/ingredient_img"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ingredient_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginStart="14dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:scaleX="0.9"
                android:scaleY="0.9"
                android:src="@drawable/fimage_pizza"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

